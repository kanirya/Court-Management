@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<style>
    :root {
        --primary: #2563eb;
        --secondary: #10b981;
        --light: #ffffff;
        --dark: #0f172a;
        --text-light: rgba(255, 255, 255, 0.8);
        --border-color: rgba(255, 255, 255, 0.3);
        --radius: 1rem;
        --shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
        --glass-bg: rgba(255, 255, 255, 0.1);
        --glass-blur: blur(16px);
        --font-family: 'Inter', sans-serif;
    }

    body {
        margin: 0;
        padding: 0;
        font-family: var(--font-family);
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .register-card {
        background: var(--glass-bg);
        backdrop-filter: var(--glass-blur);
        -webkit-backdrop-filter: var(--glass-blur);
        border: 1px solid var(--border-color);
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        width: 100%;
        max-width: 650px;
        padding: 2rem;
        color: var(--light);
    }

        .register-card h2 {
            text-align: center;
            margin-bottom: 1.5rem;
            font-weight: 600;
        }

    .form-group {
        margin-bottom: 1.2rem;
    }

        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
            color: var(--text-light);
        }

        .form-group input,
        .form-group select {
            width: 100%;
            padding: 0.75rem 1rem;
            border-radius: 0.6rem;
            border: none;
            background: rgba(255, 255, 255, 0.2);
            color: var(--light);
            outline: none;
            transition: background 0.3s ease;
            font-family: var(--font-family);
        }

            .form-group input::placeholder {
                color: #e0e0e0;
            }

            .form-group input:focus,
            .form-group select:focus {
                background: rgba(255, 255, 255, 0.3);
            }

    .btn-register {
        width: 100%;
        padding: 0.75rem;
        background: var(--primary);
        border: none;
        border-radius: 0.6rem;
        color: var(--light);
        font-weight: 600;
        cursor: pointer;
        transition: background 0.3s ease;
        font-family: var(--font-family);
    }

        .btn-register:hover {
            background: #1e40af;
        }

    .links {
        text-align: center;
        margin-top: 1.5rem;
    }

        .links a {
            color: var(--light);
            font-size: 0.9rem;
            text-decoration: none;
            margin: 0 0.5rem;
        }

            .links a:hover {
                text-decoration: underline;
            }
</style>

<div class="register-card">
    <h2>@ViewData["Title"]</h2>
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger text-center" role="alert"></div>

        <div class="form-group">
            <label asp-for="Input.Name">Name</label>
            <input asp-for="Input.Name" placeholder="Enter your full name" />
            <span asp-validation-for="Input.Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Email">Email</label>
            <input asp-for="Input.Email" type="email" placeholder="name@example.com" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Password">Password</label>
            <input asp-for="Input.Password" type="password" placeholder="Create a password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
            <input asp-for="Input.ConfirmPassword" type="password" placeholder="Confirm your password" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Select Role</label>
            <select asp-for="SelectedRole" asp-items="Model.Roles" class="text-black"></select>
        </div>

        <button id="registerSubmit" type="submit" class="btn-register">Register</button>
    </form>
    <div class="m-3">
        <a class="btn" href="/Identity/Account/Login">Already has an account</a>
    </div>

    @if ((Model.ExternalLogins?.Count ?? 0) > 0)
    {
        <div class="links">
            <p>Or register using:</p>
            @foreach (var provider in Model.ExternalLogins!)
            {
                <a class="btn-register" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" name="provider" value="@provider.Name">
                    @provider.DisplayName
                </a>
            }
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
